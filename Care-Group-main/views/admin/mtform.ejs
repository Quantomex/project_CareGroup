    </div>
  </div>
  <!-- Page Header End -->
  <!-- Shop Start -->
  <div class="container-fluid pt-4 ">
    <div class="row px-xl-5">

      <!-- Shop Product Start -->
      <div class="col-lg-12 col-md-12">
        <div class="row pb-3">
          <div class="col-12 pb-1">
            <div class="d-flex align-items-center justify-content-between mb-4">
            </div>
          </div>
          <!-- Product Div Start  -->
          <% for (let image of mtData) { %>
          <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
            <div class="card product-item border-0 mb-4">
              <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                <!-- image Tag  -->
                <img class="img-fluid w-100" src="<%= image.imagePath %>" alt="<%= image.name %>">
              </div>
              <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                <h6 class="text-truncate mb-3">
                  <%= image.name %>
                </h6>
                <div class="d-flex justify-content-center" style="font-size: 12px;">
                  <p><strong>Description</strong> <%= image.description %></p>
                </div>
                <div class="d-flex justify-content-center" style="font-size: 12px;">
                  <p><strong>Link</strong> <%= image.link %></p>
                </div>

              </div>
              <div class="card-footer d-flex justify-content-between bg-light border">
                <form action="/deleteMt/<%= image._id %>" method="post">
                  <button type="submit" class="btn btn-sm text-dark p-0"><i class="fas fa-trash trashcolor mr-1 "></i>Delete</button>
                </form>
                <form action="/editMt/<%= image._id  %>" method="get">
                  <button type="submit" class="btn btn-sm text-dark p-0"><i class="fas fa-pen pencolor mr-1 fa-1x"></i>Edit</button>
                </form>
              </div>
            </div>
          </div>
          <% } %>
          <!-- Product Div End  -->
        </div>
      </div>
    </div>
