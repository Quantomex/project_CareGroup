<div class="row">
  <% for (let image of ChairmanData) {  %>
  <div class="column2">
    <div class="box"><img class="hovereffect" src="<%= image.imagePath %>" alt="<%= image.name %>">
      <div class="overlay">My Name Is <%= image.name %></div>
      <% } %>
    </div>
  </div>
  <div class="column2">
    <% for (let image of ChairmanData) {  %>
    <h1>Chairman's <br> Statement</h1>
      <p>
        <%= image.description %>
      </p> <br> <br>
      <a class="dis" href="">Discover more</a>
      <% } %>
