      <button class="btnpostion" id="linkId">Discover More!</button>
      <button class="btnpostion" id="linkIdTwo">Hide!</button>
    </center>
  </div>
</div>

<% if(st.length) {%>
<div class="textcenter">
  <% for (let description of st) { %>

  <p class="center-text welcomefont">
    <%= description.description %>
  </p>

  <% } %>
</div>
<% } %>
<div class="w">
    <h1 class="headingtop break">Our Values</h1>
</div>
<!-- OUR VALUES START  -->
<div id="box-bor">
  <div class="v-container">
    <% for (let image of ValuesSections) { %>
      <div class="v-card">
          <div class="v-content">

              <h2>Values</h2>
              <p><%= image.description %></p>
           
          </div>
          <img src="<%= image.imagePath %>" alt="<%= image.imageFilename %>">
      </div>
      <% } %>
      <% for (let image of MissionData) { %>
        <div class="v-card">
            <div class="v-content">
  
                <h2>Mission</h2>
                <p><%= image.description %></p>
             
            </div>
            <img src="<%= image.imagePath %>" alt="<%= image.imageFilename %>">
        </div>
        <% } %>
        <% for (let image of visionSection) { %>
          <div class="v-card">
              <div class="v-content">
    
                  <h2>Vision</h2>
                  <p><%= image.description %></p>
               
              </div>
              <img src="<%= image.imagePath %>" alt="<%= image.imageFilename %>">
          </div>
          <% } %>
 
     
  </div>
</div>

<div class="w">
    <h1 class="headingtop break">Group of Companies</h1>
</div>
<div id="brands">
  <% if(logoImages.length) {%>
  <% for (let image of logoImages) { %>
  <a style="color: white;" href="<%= image.link %>" target="_blank">
    <img class="img-width" src="<%= image.imagePath %>" alt="<%= image.imageFilename %>">
  </a>
  <% } %>
</div>
<% } %>
</div>



