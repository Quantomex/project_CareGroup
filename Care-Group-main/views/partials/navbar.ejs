 <script>
  const burgerMenu = document.getElementById("burdermenu");
  const mainMenu = document.querySelector(".main-menu");

  burgerMenu.addEventListener("click", () => {
    mainMenu.classList.toggle("active");
  });

  const submenuItems = document.querySelectorAll(".main-menu li");

  submenuItems.forEach((item) => {
    item.addEventListener("click", (e) => {
      const submenu = e.currentTarget.querySelector("ul"); // Use e.currentTarget
      if (submenu) {
        submenu.classList.toggle("active");
        e.stopPropagation(); // Prevent parent links from navigating
      }
    });
  });

</script>

    